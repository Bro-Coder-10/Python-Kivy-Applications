<MainScreen>:
    canvas.before:
        Color:
            rgba:(1, 0.16862745098,0.16862745098,1)
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [12]
    padding:(2,2)
    orientation:"vertical"
    spacing:5

    Label:
        size:.3,.3
        text:"[b][u]ACTIVITY & DIET PLANNER[/u][/b]"
        markup:True
        color:(0,0,0,1)
        font_size:"30dp"
        color:0,0,0,1

<Meta_Function>:
    BoxLayout:
        size_hint : (1,1.8)
        canvas.before:
            Color:
                rgba:((0.8862,0.5491 ,0.2095,1))
            RoundedRectangle:
                pos: self.pos
                size: self.size
                radius: [15]
        spacing :-35
        Label:
            text: "  [b][u]For activity Level : Adjust the slider position to the activity level!\n[/u]1.Rest     2.Very less exercise     3.Less Exercise\n     4.mild exercise\n5.Intense exercise     6.High intensity exercise\n     7.Very high intensity[/b]"
            size_hint: 1,1
            font_size: self.width/27
            halign:"center"
            valign:"middle"
            markup:True
            color: 0,0,0,1
        Label:
            size_hint: 1,1
            font_size: self.width/28
            text: "   [b][u]For Goals : Adjust the slider position to the Goal!\n[/u]1.maintain     2.mildlose     3.weightlose\n     4.extremelose\n5.mildgain     6.weightgain     7.extremegain[/b]"
            valign:"bottom"
            halign:"center"
            markup:True
            color: 0,0,0,1
        Label:
            size_hint: 1,1
            font_size: self.width/25
            text: "     [b][u]Diet : Adjust the slider position to select diet:[/u]\n1. Balanced  2. Lowfat  3. Lowcarbs  4. Highprotein[/b]"
            halign:"center"
            valign:"middle"
            markup:True
            color: 0,0,0,1

    BoxLayout:
        canvas.before:
            Color:
                rgba:((0.8862,0.5491 ,0.2095,1))
            RoundedRectangle:
                pos: self.pos
                size: self.size
                radius: [15]
        spacing :-30
        Label:
            text: "Height(Cms)"
            font_size:"25dp"
            halign: "center"
            color: 0,0,0,1
        Slider:
            id : height_val
            min : 120
            max : 240
            on_value: root.on_slide_height(self)
        Label:
            text:str(int(height_val.value))
            font_size:"25dp"
        Label:
            text:"Cms"
            color:(0,0,0,1)
            font_size:"25dp"

    BoxLayout:
        canvas.before:
            Color:
                rgba:((0.8862,0.5491 ,0.2095,1))
            RoundedRectangle:
                pos: self.pos
                size: self.size
                radius: [15]
        spacing :-30
        Label:
            text: "Weight(Kgs)"
            font_size:"25dp"
            halign: "center"
            color: 0,0,0,1
        Slider:
            id : weight_val
            min : 40
            max : 120
            on_value: root.on_slide_weight(self)
        Label:
            text:str(int(weight_val.value))
            font_size:"25dp"
        Label:
            text:"Kgs"
            color:(0,0,0,1)
            font_size:"25dp"

    BoxLayout:
        canvas.before:
            Color:
                rgba:((0.8862,0.5491 ,0.2095,1))
            RoundedRectangle:
                pos: self.pos
                size: self.size
                radius: [15]
        spacing: -30
        Label:
            text: "Age(Years)"
            halign: "center"
            font_size:"25dp"
            color: 0,0,0,1
        Slider:
            id : age_val
            hint: True
            min : 10
            max : 100
            on_value: root.on_slide_age(self)
        Label:
            text:str(int(age_val.value))
            font_size:"25dp"
        Label:
            text:"Years"
            color:(0,0,0,1)
            font_size:"25dp"
    BoxLayout:
        canvas.before:
            Color:
                rgba:((0.8862,0.5491 ,0.2095,1))
            RoundedRectangle:
                pos: self.pos
                size: self.size
                radius: [15]
        spacing: -30
        Label:
            text: "Activity-Level"
            halign: "center"
            font_size:"25dp"
            color: 0,0,0,1
        Slider:
            id : act_val
            hint: True
            min : 1
            max : 7
            on_value: root.on_slide_act(self)
        Label:
            text:str(int(act_val.value))
            font_size:"25dp"
        Label:
            text:"Level"
            color:(0,0,0,1)
            font_size:"25dp"
    BoxLayout:
        canvas.before:
            Color:
                rgba:((0.8862,0.5491 ,0.2095,1))
            RoundedRectangle:
                pos: self.pos
                size: self.size
                radius: [15]
        spacing: -30
        Label:
            text: "Goal"
            font_size:"25dp"
            color: 0,0,0,1
        Slider:
            id : goal_val
            hint: True
            min : 1
            max : 7
            on_value: root.on_slide_goal(self)
        Label:
            text:str(int(goal_val.value))
            font_size:"25dp"
        Label:
            halign: "center"
            text:"Goal"
            color:(0,0,0,1)
            font_size:"25dp"
    BoxLayout:
        canvas.before:
            Color:
                rgba:((0.8862,0.5491 ,0.2095,1))
            RoundedRectangle:
                pos: self.pos
                size: self.size
                radius: [15]
        spacing: -30
        Label:
            text: "Diet"
            font_size:"25dp"
            color: 0,0,0,1
        Slider:
            id : diet_val
            hint: True
            min : 1
            max : 4
            on_value: root.on_slide_diet(self)
        Label:
            text:str(int(diet_val.value))
            font_size:"25dp"
        Label:
            halign: "center"
            text:"Diet"
            color:(0,0,0,1)
            font_size:"25dp"

    BoxLayout:
        canvas.before:
            Color:
                rgba:((0.8862,0.5491 ,0.2095,1))
            RoundedRectangle:
                pos: self.pos
                size: self.size
                radius: [15]
        spacing: -30
        Label:
            text:"Male"
            halign: "right"
            color:(0,0,0,1)
            font_size:"25dp"
        Switch:
            default:'off'
		    on_active: root.on_switch_active(self)
        Label:
            text:"Female"
            halign: "left"
            color:(0,0,0,1)
            font_size:"25dp"
    BoxLayout:
        spacing: -30
        Label:
            id : output1
            size_hint: 1,1
            font_size: self.width/30
            text:""
            color : (0,0,0,1)
            valign: "middle"
            halign : "left"
            canvas.before:
                Color:
                    rgba: (0.8862,0.5491 ,0.2095,1)
                RoundedRectangle:
                    pos:self.pos
                    size:self.size
                    radius: [15]
        Label:
            id : output2
            size_hint: 1,1
            font_size: self.width/40
            text:""
            color : (0,0,0,1)
            valign: "middle"
            halign : "right"
            canvas.before:
                Color:
                    rgba: (0.8862,0.5491 ,0.2095,1)
                RoundedRectangle:
                    pos:self.pos
                    size:self.size
                    radius: [15]


    Button:
        background_color:(0.8862,0.5491 ,0.2095,1)
        text:"Process"
        font_size:"25dp"
        color: 1,1,1,1
        on_press : root.act_calc()




